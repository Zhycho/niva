include ../../mixins/mixins.pug

mixin header-nav__item(title='Пункт меню')
    li.header-nav__item
        a&attributes(attributes)= title

.header-top
    .container
        .header-top-two-half
            div
                .logo-wrapper
                    a(href="index.html").logo
                        img(src="assets/img/logo-niva.png", alt="")
                    span.logo-description Еженедельная газета пермского района
            div
                nav.header-nav
                    ul
                        +header-nav__item('Новости')(href='news.html')
                        +header-nav__item('Архив')(href='archive.html')
                        +header-nav__item('Статьи')(href='news.html')
                        +header-nav__item('Губерния')(href='typical.html')
                        +header-nav__item('Впн-2020')(href='news.html')
                        +header-nav__item('Рекламодателю')(href='contacts.html')
                form(action="").header-search.js--header-search
                    .header-search__input-wrapper
                        input.header-search__input(type="text", name="", placeholder="Я ищу...")
                    button.header-search__button.js--header-search-button(aria-label="Поиск")
